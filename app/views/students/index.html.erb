<h1>List of Students</h1>

<%# <%= link_to('ADD NEW STUDENT',new_student_path, :class=> 'action new')%>

<%= form_tag(search_path, :method => "post") do %>
   <%= label_tag(:name, "Search:") %>
   <%= text_field_tag(:name) %>
   <%= submit_tag("Search") %>
<% end %>
<table>

<% @allstudents.each do |obj| %>
<tr> 
<td> <%=obj.name%></td>
<td> <%= button_to 'show',student_path(obj), method: 'get'%></td>
<td> <%= button_to 'edit',edit_student_path(obj), method: 'get' %></td>
<td> <%= button_to 'delete',student_path(obj), method: 'delete', data:{confirm:"are you sure?"}%></td>
</tr>
<%end%>
</table>


